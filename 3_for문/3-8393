// 2021-08-04

using System;

namespace BaekJoon_C_
{
    class Program
    {
        static void Main(string[] args)
        {
            int N = int.Parse(Console.ReadLine());

            int sum = 0;

            for (int i = 1; i < N + 1; i++){
                sum += i;
            }
            Console.WriteLine(sum);
        }
    }
}