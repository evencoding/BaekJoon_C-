// 2021-08-04

using System;

namespace BaekJoon_C_
{
    class Program
    {
        static void Main(string[] args)
        {
            int N = int.Parse(Console.ReadLine());

            for (int i = 0; i < N; i++){
                string[] str = Console.ReadLine().Split();
                int sum = int.Parse(str[0]) + int.Parse(str[1]);
                Console.WriteLine(sum);
            }
        }
    }
}